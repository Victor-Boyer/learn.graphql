  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["@types", "node_modules/@types"],
    "target": "ES2018",
    "module": "commonjs",
    "lib": ["esnext"],
    "strict": true,
    "rootDir": ".",
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}